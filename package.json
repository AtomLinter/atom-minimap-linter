{
  "name": "minimap-linter",
  "main": "./lib/minimap-linter.js",
  "version": "2.1.1",
  "description": "Minimap display for Linter messages",
  "keywords": [
    "atom",
    "minimap",
    "linter"
  ],
  "repository": "https://github.com/AtomLinter/atom-minimap-linter",
  "private": true,
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "configSchema": {
    "markerType": {
      "type": "string",
      "default": "line",
      "enum": [
        "line",
        "gutter",
        "highlight-under",
        "highlight-over",
        "highlight-outline"
      ],
      "description": "Marker type for linter highlights"
    }
  },
  "consumedServices": {
    "minimap": {
      "versions": {
        "1.0.0": "consumeMinimapServiceV1"
      }
    },
    "diagnostics-store": {
      "versions": {
        "0.3.0": "consumeDiagnosticUpdates"
      }
    }
  },
  "providedServices": {
    "linter-ui": {
      "versions": {
        "1.0.0": "provideUI"
      }
    }
  },
  "package-deps": [
    "linter:2.1.1"
  ],
  "dependencies": {
    "atom-package-deps": "^4.5.0"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "jasmine-fix": "^1.0.1"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  }
}
